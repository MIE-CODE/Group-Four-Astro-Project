<style>
  .faq details summary::-webkit-details-marker {
    display: none; /* For Webkit browsers like Chrome and Safari */
  }
  .faq details summary::before {
    content: ""; /* For other browsers */
  }
</style>

<h2 class="w-full lg:text-[64px] md:text-[48p] sm:text-[32px] text-center my-10">FAQ</h2>

<section class="faq grid grid-cols-1 md:grid-cols-2 gap-4 mx-4 sm:mx-8 md:mx-16 lg:mx-64 mb-24">
    <div class="grid grid-cols-1 gap-3">
        {faqData1.map(({ question, answer }, index) => (
            <div class="p-4 bg-[#F2F4F7] rounded">
            <details>
                <summary class="font-semibold cursor-pointer relative flex items-center">
                {question}
                <span class="plus-icon absolute right-0 bg-gray-300 rounded p-1 px-3 text-black text-center align-items-center">+</span>
                <span class="minus-icon absolute right-0 bg-[#df0000] rounded p-1 px-3 text-white text-center hidden">-</span>
                </summary>
                <p class="mt-2">{answer}</p>
            </details>
            </div>
        ))}
    </div>
   <div class="grid grid-cols-1 gap-3">
        {faqData2.map(({ question, answer }, index) => (
        <div class="p-4 bg-[#F2F4F7] rounded">
